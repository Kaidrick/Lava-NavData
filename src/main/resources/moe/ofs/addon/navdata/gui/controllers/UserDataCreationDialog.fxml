<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<DialogPane fx:id="userDataCreationPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="moe.ofs.addon.navdata.gui.controllers.UserDataCreationDialog">
   <header>
      <AnchorPane prefHeight="35.0" prefWidth="600.0">
         <children>
            <Label text="NavFix entry form" />
         </children>
      </AnchorPane>
   </header>
   <content>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Data Type" />
                  <RadioButton fx:id="dataTypeNavaidRadioButton" mnemonicParsing="false" text="Navaid" />
                  <RadioButton fx:id="dataTypeWaypointRadioButton" mnemonicParsing="false" text="Waypoint" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Format" />
                  <RadioButton fx:id="dataFormatStandardRadioButton" mnemonicParsing="false" text="Standard" />
                  <RadioButton fx:id="dataFormatPrecisionRadioButton" mnemonicParsing="false" text="Precision" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Identification *" />
                  <TextField fx:id="identificationTextField" />
               </children>
            </HBox>
            <HBox layoutX="20.0" layoutY="20.0" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Label text="Fix Name *" />
                  <TextField fx:id="fixNameTextField" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Label text="Position *" />
                  <VBox spacing="20.0">
                     <children>
                        <Label text="Latitude" />
                        <Label text="Longitude" />
                        <Label text="Altitude" />
                     </children>
                  </VBox>
                  <VBox prefWidth="50.0" spacing="10.0">
                     <children>
                        <ComboBox fx:id="latitudeOrientComboBox" prefWidth="150.0" />
                        <ComboBox fx:id="longitudeOrientComboBox" prefWidth="150.0" />
                        <TextField fx:id="altitudeTextField" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                     <children>
                        <TextField fx:id="latitudeDegreeTextField" />
                        <TextField fx:id="longitudeDegreeTextField" />
                        <ComboBox prefWidth="150.0" />
                     </children>
                  </VBox>
                  <VBox spacing="20.0">
                     <children>
                        <Label text="°" />
                        <Label text="°" />
                     </children>
                  </VBox>
                  <VBox layoutX="393.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                     <children>
                        <TextField fx:id="latitudeMinuteTextField" />
                        <TextField fx:id="longitudeMinuteTextField" />
                     </children>
                  </VBox>
                  <VBox spacing="20.0">
                     <children>
                        <Label text="'" />
                        <Label text="'" />
                     </children>
                  </VBox>
                  <VBox layoutX="531.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                     <children>
                        <TextField fx:id="latitudeSecondTextField" />
                        <TextField fx:id="longitudeSecondTextField" />
                     </children>
                  </VBox>
                  <VBox layoutX="543.0" layoutY="10.0" spacing="20.0">
                     <children>
                        <Label text="&quot;" />
                        <Label text="&quot;" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox layoutX="20.0" layoutY="120.0" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Label text="Description" />
                  <TextField fx:id="fixPointDescriptionTextField" />
               </children>
            </HBox>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Button fx:id="navFixUserDataSubmitButton" mnemonicParsing="false" onAction="#submitData" text="Submit" AnchorPane.rightAnchor="0.0" />
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </content>
</DialogPane>
